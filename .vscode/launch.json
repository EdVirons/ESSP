{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug IMS API",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/services/ims-api/cmd/api",
      "cwd": "${workspaceFolder}/services/ims-api",
      "env": {
        "APP_ENV": "dev",
        "LOG_LEVEL": "debug",
        "PG_DSN": "postgres://ssp:ssp@localhost:5432/ssp_ims?sslmode=disable",
        "REDIS_ADDR": "localhost:6379",
        "REDIS_PASSWORD": "",
        "REDIS_DB": "0",
        "NATS_URL": "nats://localhost:4222",
        "MINIO_ENDPOINT": "localhost:9000",
        "MINIO_ACCESS_KEY": "minio",
        "MINIO_SECRET_KEY": "minio12345",
        "MINIO_USE_SSL": "false",
        "AUTH_ENABLED": "false",
        "RATE_LIMIT_ENABLED": "false",
        "DEV_TENANT_ID": "demo-tenant",
        "DEV_SCHOOL_ID": "demo-school"
      }
    },
    {
      "name": "Debug SSOT School",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/services/ssot-school/cmd/ssot_school",
      "cwd": "${workspaceFolder}/services/ssot-school",
      "env": {
        "HTTP_ADDR": ":8081",
        "LOG_LEVEL": "debug",
        "DB_URL": "postgres://ssp:ssp@localhost:5432/ssp_school?sslmode=disable",
        "NATS_URL": "nats://localhost:4222"
      }
    },
    {
      "name": "Debug SSOT Devices",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/services/ssot-devices/cmd/ssot_devices",
      "cwd": "${workspaceFolder}/services/ssot-devices",
      "env": {
        "HTTP_ADDR": ":8082",
        "LOG_LEVEL": "debug",
        "DB_URL": "postgres://ssp:ssp@localhost:5432/ssp_devices?sslmode=disable",
        "NATS_URL": "nats://localhost:4222"
      }
    },
    {
      "name": "Debug SSOT Parts",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/services/ssot-parts/cmd/ssot_parts",
      "cwd": "${workspaceFolder}/services/ssot-parts",
      "env": {
        "HTTP_ADDR": ":8083",
        "LOG_LEVEL": "debug",
        "DB_URL": "postgres://ssp:ssp@localhost:5432/ssp_parts?sslmode=disable",
        "NATS_URL": "nats://localhost:4222"
      }
    },
    {
      "name": "Debug Sync Worker",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/services/sync-worker/cmd/worker",
      "cwd": "${workspaceFolder}/services/sync-worker",
      "env": {
        "LOG_LEVEL": "debug",
        "NATS_URL": "nats://localhost:4222"
      }
    },
    {
      "name": "Debug IMS Migrations",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/services/ims-api/cmd/migrate",
      "args": ["up"],
      "cwd": "${workspaceFolder}/services/ims-api",
      "env": {
        "DB_URL": "postgres://ssp:ssp@localhost:5432/ssp_ims?sslmode=disable"
      }
    },
    {
      "name": "Debug Current Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": [
        "-test.run",
        "^${selectedText}$"
      ],
      "showLog": true
    },
    {
      "name": "Debug Current Test File",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "showLog": true
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}"
    }
  ],
  "compounds": [
    {
      "name": "Debug All Services",
      "configurations": [
        "Debug IMS API",
        "Debug SSOT School",
        "Debug SSOT Devices",
        "Debug SSOT Parts",
        "Debug Sync Worker"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "all-services",
        "order": 1
      }
    }
  ]
}
