# ESSP Production Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# GitHub Container Registry
# =============================================================================
GITHUB_REPOSITORY=edvirons/essp
IMAGE_TAG=latest

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=essp
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# =============================================================================
# Redis/Valkey Configuration
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# =============================================================================
# MinIO Configuration
# =============================================================================
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET

# =============================================================================
# Domain Configuration (for SSL)
# =============================================================================
DOMAIN=essp.yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# =============================================================================
# Authentication (optional - set to true when ready)
# =============================================================================
AUTH_ENABLED=false
# AUTH_ISSUER=https://auth.yourdomain.com
# AUTH_JWKS_URL=https://auth.yourdomain.com/.well-known/jwks.json

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=production
LOG_LEVEL=info
